<Window x:Class="Quiz_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Tan">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding QuestionOnScreen}" TextAlignment="Center" FontSize="30" Background="White" Height="100" Width="700" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="20"/>

        <Button Content="{Binding Answer1}" Command="{Binding ButtonCommands}" Grid.Column="0" Grid.Row="2" Background="Gray" Height="50" Width="170" BorderBrush="Black" BorderThickness="5"/>
        <Button Content="{Binding Answer2}" Command="{Binding ButtonCommands}"  Grid.Column="1" Grid.Row="2" Background="Gray" Height="50" Width="170" BorderBrush="Black" BorderThickness="5"/>
        <Button Content="{Binding Answer3}" Command="{Binding ButtonCommands}" Grid.Column="2" Grid.Row="2" Background="Gray" Height="50" Width="170" BorderBrush="Black" BorderThickness="5"/>
        <Button Content="{Binding Answer4}" Command="{Binding ButtonCommands}" Grid.Column="3" Grid.Row="2" Background="Gray" Height="50" Width="170" BorderBrush="Black" BorderThickness="5"/>

    </Grid>
</Window>
